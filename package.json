{
  "name": "simya-calendar",
  "version": "0.1.0",
  "description": "심야 캘린더",
  "main": "dist-electron/main.js",
  "author": {
    "name": "bliss",
    "email": "blissful.y0@gmail.com"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "prebuild": "tsc && vite build",
    "build": "yarn prebuild && electron-builder",
    "build:win": "yarn prebuild && electron-builder --win",
    "build:mac": "yarn prebuild && electron-builder --mac",
    "build:linux": "yarn prebuild && electron-builder --linux",
    "build:all": "concurrently \"yarn build:win\" \"yarn build:mac\"",
    "preview": "vite preview",
    "electron": "electron .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "electron:dev": "concurrently \"yarn dev\" \"wait-on http://localhost:5173 && electron .\"",
    "dist": "electron-builder",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.2.0",
    "electron-store": "^10.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-easy-crop": "^5.5.2",
    "react-hot-toast": "^2.6.0",
    "react-icons": "^5.5.0",
    "recoil": "^0.7.7",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.13.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "happy-dom": "^18.0.1",
    "jsdom": "^27.0.0",
    "sass": "^1.72.0",
    "sass-embedded": "^1.93.2",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^1.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.simya.calendar",
    "productName": "심야 캘린더",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist",
      "dist-electron",
      "!**/*.{ts,map,spec.js,test.js}"
    ],
    "mac": {
      "icon": "public/icon.icns",
      "category": "public.app-category.productivity",
      "identity": null,
      "hardenedRuntime": true,
      "gatekeeperAssess": true,
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "public/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "심야 캘린더",
      "runAfterFinish": true
    },
    "linux": {
      "icon": "public/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
